<h1 id="headline"> New Athlete </h1>

<div class = "form-group">
<%= simple_form_for(@user, html: {class: 'form-horizontal' }) do |f| %>
  <%= f.input :user_name, label: "User Name" , input_html: { class: "form-control"} %>
  <%= f.input :password, label: "Password", input_html: { class: "form-control"} %>
  <%= f.input :password_confirmation, label: "Confirm Password", input_html: { class: "form-control"} %>
  <br>
  <%= f.button :submit %>
</div>
  <% end %>
